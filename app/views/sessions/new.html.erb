<h1 class="text-center">Login</h1>
<hr>

<div class="col-md-5">
</div>

<%= form_for :user do |f| %>
<form>
	<div class="col-md-2">
		<div class="form-group">
		<strong>Email: </strong>
			<%= f.text_field :email, class: "form-control", placeholder: "Enter email" %><br>
			
			<strong>Password: </strong> 
			<%= f.password_field :password, class: "form-control", placeholder: "Password" %><br>

			<%= link_to 'forgot password?', "/"%>

		</div>
			<%= f.submit "Login", class: "btn btn-primary" %>
	</div>
</form>
<% end %>

<div class="col-md-5">
</div>


<div class="text-center">
	<h1><%= @skate_session.spot %></h1>
	<%= link_to 'Back to sessions', "/skate_sessions?current=true" %> 
</div>
<hr>

<div class="lt-sidebar">

<div class="row">
	<div class="col-md-2">
		<div class="borderRT">
			<div class="form-group">

				<%= form_for [@skate_session, @photo] do |f| %>
					<strong>Upload photo here</strong>
					<br>
					<br>
					<%= f.file_field :photo %>
					<br>
					<strong>Caption</strong> 
					<br>
					<%= f.text_field :caption, placeholder: "Enter caption" %>
					<br>
					<br>
					<%= f.submit "Submit", class: "btn btn-primary" %>

				<% end %>

				<br>

				<%= form_for [@skate_session, @video] do |v| %>
					<strong>Upload video here</strong>
					<br>
					<br>
					<%= v.file_field :video %>
					<br>
					<strong>Caption</strong> 
					<br>
					<%= v.text_field :caption, placeholder: "Enter caption" %>
					<br>
					<br>
					<%= v.submit "Submit", class: "btn btn-primary" %>

				<% end %>

			</div>
		</div>
	</div>

	<div class="row">

		<% @skate_session.photos.each do |p| %>
			<div class="col-md-3"> <a href="/skate_sessions/:skate_session_id/photos/:id/edit"> <%= image_tag p.photo.url(:medium) %> </a>
			<br>
			 <%= p.caption %>
			</div>

		<% end %>

		<% @skate_session.videos.each do |x| %>
			<div class="col-md-3">  <%= video_tag x.video.url(:medium) %>
			<br>
			 <%= x.caption %>
			</div>

		<% end %>

	</div>
</div>
	
</div>
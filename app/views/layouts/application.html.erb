<!DOCTYPE html>
<html>
<head>
  <title>Go Skate</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if current_user %>
<div class="text-right">
	<strong> Logged in as <%= current_user.first_name %> </strong> | <strong> <%= link_to 'Logout', logout_path %> </strong> 
</div>
<% else %>
	<div class="text-right">
		<strong> <%= link_to 'Login', login_path %> </strong> | <strong> <%= link_to 'Signup', signup_path %> </strong>
	</div>
	<% end %>

<%= yield %>

</body>
</html>
